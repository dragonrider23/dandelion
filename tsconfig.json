{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./public/dist/js",
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "public/source/modules/*"
            ]
        },
        "typeRoots": [
            "public/source/dts"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "public/source/ts/*.ts"
    ]
}
